<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="265dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_group_selecao_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/amarelo"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/times_selecao_txt"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/roxo_escuro"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Times"
                android:textColor="@color/branco"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_group_selecao_txt" />

            <TextView
                android:id="@+id/pt_selecao_txt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/roxo_escuro"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Pts"
                android:textColor="@color/branco"
                app:layout_constraintStart_toEndOf="@+id/times_selecao_txt"
                app:layout_constraintTop_toBottomOf="@+id/name_group_selecao_txt" />

            <TextView
                android:id="@+id/jogos_selecao_txt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/roxo_escuro"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="J"
                android:textColor="@color/branco"
                app:layout_constraintStart_toEndOf="@+id/pt_selecao_txt"
                app:layout_constraintTop_toBottomOf="@+id/name_group_selecao_txt" />

            <TextView
                android:id="@+id/gp_selecao_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/roxo_escuro"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="GP"
                android:textColor="@color/branco"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/jogos_selecao_txt"
                app:layout_constraintTop_toBottomOf="@+id/name_group_selecao_txt" />

            <TextView
                android:id="@+id/fundo_selecao_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/roxo_claro"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/times_selecao_txt" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/roxo_padrao"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fundo_selecao_txt" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/roxo_claro"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:background="@color/roxo_padrao"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:srcCompat="@drawable/ic_brazil" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView4"
                app:srcCompat="@drawable/ic_brazil" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                app:srcCompat="@drawable/ic_brazil" />

            <ImageView
                android:id="@+id/img_band_first_selecao"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fundo_selecao_txt"
                app:srcCompat="@drawable/ic_brazil" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/roxo_escuro"
                android:text="Brasil"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintStart_toEndOf="@+id/img_band_first_selecao"
                app:layout_constraintTop_toBottomOf="@+id/times_selecao_txt" />

            <TextView
                android:id="@+id/pts_band_first_selecao"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="-"
                android:textColor="@color/roxo_escuro"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/fundo_selecao_txt"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/pt_selecao_txt" />

            <TextView
                android:id="@+id/j_band_first_selecao"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="-"
                android:textColor="@color/roxo_escuro"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintStart_toEndOf="@+id/pts_band_first_selecao"
                app:layout_constraintTop_toBottomOf="@+id/jogos_selecao_txt" />

            <TextView
                android:id="@+id/gp_band_first_selecao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/roxo_escuro"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/j_band_first_selecao"
                app:layout_constraintTop_toBottomOf="@+id/gp_selecao_txt" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>