<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_group_selecao_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/amarelo"
                android:gravity="center"
                android:text="TextView"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/times_selecao_txt"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Times"
                android:paddingLeft="5dp"
                android:background="@color/roxo_escuro"
                android:textColor="@color/branco"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_group_selecao_txt" />

            <TextView
                android:id="@+id/pt_selecao_txt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Pts"
                android:background="@color/roxo_escuro"
                android:textColor="@color/branco"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/times_selecao_txt"
                app:layout_constraintTop_toBottomOf="@+id/name_group_selecao_txt" />

            <TextView
                android:id="@+id/jogos_selecao_txt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="J"
                android:background="@color/roxo_escuro"
                android:textColor="@color/branco"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/pt_selecao_txt"
                app:layout_constraintTop_toBottomOf="@+id/name_group_selecao_txt" />

            <TextView
                android:id="@+id/gp_selecao_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/roxo_escuro"
                android:gravity="center"
                android:text="GP"
                android:textColor="@color/branco"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/jogos_selecao_txt"
                app:layout_constraintTop_toBottomOf="@+id/name_group_selecao_txt" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>